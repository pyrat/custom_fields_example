= render partial: "shared/flash"

%h1 Sites

%table.table
  %thead
    %tr
      %th Name
      %th

  %tbody
    - @sites.each do |site|
      %tr
        %td= link_to site.name, site_path(site)
        %td
          = link_to 'Edit', edit_site_path(site), class: 'btn btn-secondary'
          = link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'


.mb-3
  = link_to 'New Site', new_site_path, class: 'btn btn-primary'


= render partial: "report_types"
